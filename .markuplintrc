{
	"parser": {
		"\\.[jt]sx?$": "@markuplint/jsx-parser"
	},
	"specs": {
		"\\.[jt]sx?$": "@markuplint/react-spec"
	},
	"rules": {
		"attr-duplication": true,
		"character-reference": true,
		"class-naming": "/.+/",
		"deprecated-attr": true,
		"deprecated-element": true,
		"disallowed-element": true,
		"doctype": true,
		"id-duplication": true,
		"ineffective-attr": true,
		"landmark-roles": true,
		"no-refer-to-non-existent-id": true,
		"permitted-contents": true,
		"required-attr": true,
		"required-element": true,
		"required-h1": true,
		"use-list": true,
		"wai-aria": true
	},
	"nodeRules": [
		{
			"selector": "TabList",
			"rules": {
				"permitted-contents": [
					{
						"tag": "TabList",
						"contents": [
							{
								"oneOrMore": "Tab"
							}
						]
					}
				]
			}
		},
		{
			"selector": "ImgixArtDirection",
			"rules": {
				"permitted-contents": [
					{
						"tag": "ImgixArtDirection",
						"contents": [
							{
								"oneOrMore": "ImgixSourceWithMedia"
							},
							{
								"require": "ImgixImage"
							}
						]
					}
				]
			}
		},
		{
			"selector": "ArtDirection",
			"rules": {
				"permitted-contents": [
					{
						"tag": "ArtDirection",
						"contents": [
							{
								"oneOrMore": "SourceWithMedia"
							},
							{
								"require": "Image"
							}
						]
					}
				]
			}
		},
		{
			"selector": "Picture",
			"rules": {
				"permitted-contents": [
					{
						"tag": "Picture",
						"contents": [
							{
								"require": "Image"
							}
						]
					}
				]
			}
		},
		{
			"selector": "ImgixPicture",
			"rules": {
				"permitted-contents": [
					{
						"tag": "ImgixPicture",
						"contents": [
							{
								"require": "ImgixImage"
							}
						]
					}
				]
			}
		}
	]
}
