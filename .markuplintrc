{
	"parser": {
		"\\.[jt]sx?$": "@markuplint/jsx-parser"
	},
	"specs": {
		"\\.[jt]sx?$": "@markuplint/react-spec"
	},
	"rules": {
		"attr-duplication": true,
		"character-reference": true,
		"class-naming": "/.+/",
		"deprecated-attr": true,
		"deprecated-element": true,
		"disallowed-element": true,
		"doctype": true,
		"id-duplication": true,
		"ineffective-attr": true,
		"landmark-roles": true,
		"no-refer-to-non-existent-id": true,
		"permitted-contents": true,
		"required-attr": true,
		"required-element": true,
		"required-h1": true,
		"use-list": true,
		"wai-aria": true
	},
	"nodeRules": [
		{
			"selector": "ImgixArtDirection",
			"rules": {
				"permitted-contents": true,
				"required-element": ["ImgixImage", "ImgixSourceWithMedia"]
			}
		},
		{
			"selector": "ArtDirection",
			"rules": {
				"permitted-contents": true,
				"required-element": ["Image", "SourceWithMedia"]
			}
		},
		{
			"selector": "picture",
			"rules": {
				"permitted-contents": false,
				"required-element": ["Source", "StaticImage"]
			}
		}
	]
}
