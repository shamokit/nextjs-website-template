{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/public/*": [
        "public/*"
      ],
      "@/public": [
        "public"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/api": [
        "src/api"
      ],
      "@/schemas/*": [
        "src/schemas/*"
      ],
      "@/schemas": [
        "src/schemas"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/components": [
        "src/components"
      ],
      "@/libs/*": [
        "src/libs/*"
      ],
      "@/libs": [
        "src/libs"
      ],
      "@/pages/*": [
        "src/app/*"
      ],
      "@/pages": [
        "src/app"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/styles": [
        "src/styles"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/utils": [
        "src/utils"
      ]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions/**/*"
  ]
}
